---
interface Props {
    title: string;
    institution: string;
    date: string;
    description: string;
}
const { title, institution, date, description } = Astro.props as Props;
---

<li
    class="group mb-10 ms-4 border p-5 rounded-lg border-gray-700 transition-colors duration-300
    hover:bg-blue-950/20 
    hover:border-white 
    active:bg-blue-950/20 
    active:border-white"
>
    <div
        class="absolute w-3 h-3 rounded-full mt-1.5 -start-5.5 border border-gray-900 bg-white transition-colors duration-300
        group-hover:bg-yellow-400 
        group-active:bg-yellow-400"
    >
    </div>
    <time
        class="mb-1 text-sm font-normal leading-none text-gray-500 trasition-colors duration-300
        group-hover:text-white
        group-active:text-white"
    >
        {date}
    </time>
    <h3
        class="text-2xl font-semibold text-yellow-200 trasition-colors duration-300
      group-hover:text-yellow-400
      group-active:text-yellow-400"
    >
        {title}
    </h3>
    <p class="text-sm font-medium text-gray-300 mb-1 trasition-colors duration-300
      group-hover:text-yellow-200
      group-active:text-yellow-200">
        {institution}
    </p>
    <p class="mb-4 text-base font-normal text-gray-400">
        {description}
    </p>
</li>
