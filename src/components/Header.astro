---
import { headerTranslations } from "../i18n/header.js"
import About from "@/components/icons/About.astro";
import Skills from "@/components/icons/Skills.astro";
import Proyects from "@/components/icons/Proyects.astro";
import Contact from "@/components/icons/Contact.astro";

const lang = Astro.url.pathname.startsWith('/en') ? 'en' : 'es'
const t = headerTranslations[lang]
---

<header class="flex justify-center py-4 px-6">
  <nav class="flex gap-6">
    <a href={`/${lang}/#about`} class="group relative text-white hover:text-yellow-400 transition-all duration-300 flex items-center gap-2">
      <About class="size-5"/>
      {t.about}
      <span class="absolute left-0 bottom-0 h-0.5 w-0 bg-yellow-400 transition-all duration-300 group-hover:w-full"></span>
    </a>
    <a href={`/${lang}/#skills`} class="group relative text-white hover:text-yellow-400 transition-all duration-300 flex items-center gap-2">
      <Skills class="size-5"/>
      {t.skills}
      <span class="absolute left-0 bottom-0 h-0.5 w-0 bg-yellow-400 transition-all duration-300 group-hover:w-full"></span>
    </a>
    <a href={`/${lang}/#projects`} class="group relative text-white hover:text-yellow-400 transition-all duration-300 flex items-center gap-2">
      <Proyects class="size-5"/>
      {t.projects}
      <span class="absolute left-0 bottom-0 h-0.5 w-0 bg-yellow-400 transition-all duration-300 group-hover:w-full"></span>
    </a>
    <a href={`/${lang}/#contact`} class="group relative text-white hover:text-yellow-400 transition-all duration-300 flex items-center gap-2">
      <Contact class="size-5"/>
      {t.contact}
      <span class="absolute left-0 bottom-0 h-0.5 w-0 bg-yellow-400 transition-all duration-300 group-hover:w-full"></span>
    </a>
  </nav>
  <div class="ml-4">
    <a href="/" class={`text-white ${lang === 'es' ? 'text-yellow-400' : 'hover:text-yellow-400'}`}>ES</a>
    <span class="text-white mx-1">|</span>
    <a href="/en" class={`text-white ${lang === 'en' ? 'text-yellow-400' : 'hover:text-yellow-400'}`}>EN</a>
  </div>
</header>
