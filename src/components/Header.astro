---
import { headerTranslations } from "../translations/header.js";
import About from "@/components/icons/About.astro";
import Skills from "@/components/icons/Skills.astro";
import Proyects from "@/components/icons/Proyects.astro";
import Contact from "@/components/icons/Contact.astro";

const lang = Astro.url.pathname.startsWith("/en") ? "en" : "es";
const t = headerTranslations[lang];
---

<header class="fixed top-0 left-0 w-full z-50 flex justify-center py-4 px-6">
  <nav class="flex gap-12">
    <a
      class="cursor-pointer group relative text-white hover:text-yellow-400 transition-all duration-300 flex items-center gap-2"
      onclick="document.querySelector('#about').scrollIntoView({ behavior: 'smooth' });"
    >
      <About class="size-5" />
      {t.about}
      <span
        class="absolute left-0 bottom-0 h-0.5 w-0 bg-yellow-400 transition-all duration-300 group-hover:w-full"
      ></span>
    </a>
    <a
      href="#exp"
      class="group relative text-white hover:text-yellow-400 transition-all duration-300 flex items-center gap-2"
    >
      <About class="size-5" />
      {t.experience}
      <span
        class="absolute left-0 bottom-0 h-0.5 w-0 bg-yellow-400 transition-all duration-300 group-hover:w-full"
      ></span>
    </a>
    <a
      class="cursor-pointer group relative text-white hover:text-yellow-400 transition-all duration-300 flex items-center gap-2"
      onclick="document.querySelector('#skills').scrollIntoView({ behavior: 'smooth' });"
    >
      <Skills class="size-5" />
      {t.skills}
      <span
        class="absolute left-0 bottom-0 h-0.5 w-0 bg-yellow-400 transition-all duration-300 group-hover:w-full"
      ></span>
    </a>
    <a
      id="header-name"
      class="hidden cursor-pointer text-yellow-400 text-2xl font-bold transition-all duration-500 opacity-0 -translate-y-4 leading-tight text-center"
      onclick="document.querySelector('#home').scrollIntoView({ behavior: 'smooth' });"
    >
      <span class="block">EDUARDO</span>
      <span class="block">POOT</span>
    </a>
    <a
      href="#projects"
      class="group relative text-white hover:text-yellow-400 transition-all duration-300 flex items-center gap-2"
    >
      <Proyects class="size-5" />
      {t.projects}
      <span
        class="absolute left-0 bottom-0 h-0.5 w-0 bg-yellow-400 transition-all duration-300 group-hover:w-full"
      ></span>
    </a>
    <a
      href="#contact"
      class="group relative text-white hover:text-yellow-400 transition-all duration-300 flex items-center gap-2"
    >
      <Contact class="size-5" />
      {t.contact}
      <span
        class="absolute left-0 bottom-0 h-0.5 w-0 bg-yellow-400 transition-all duration-300 group-hover:w-full"
      ></span>
    </a>
    <div class="flex items-center gap-1">
      <a
        href="/"
        class={`text-white ${lang === "es" ? "text-yellow-400" : "hover:text-yellow-400"}`}
        >ES</a
      >
      <span class="text-white mx-1">|</span>
      <a
        href="/en"
        class={`text-white ${lang === "en" ? "text-yellow-400" : "hover:text-yellow-400"}`}
        >EN</a
      >
    </div>
  </nav>
</header>
